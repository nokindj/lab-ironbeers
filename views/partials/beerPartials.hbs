<div class="col-md-4">
    <div class="beer">
        <img class="beer-img-top" src="{{image_url}}" alt="{{name}}" />
        <div class="beer-body">
            <h2 class="beer-title">{{name}}</h2>
            <h3>{{tagline}}</h3>
            <hr>
            <p>{{description}}</p>
            <hr>
            <h4>Brewers tips: </h4>
            <p>{{brewers_tips}}</p>
            <h4>Food pairing:</h4>
            <ul>
                {{#each food_pairing}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>